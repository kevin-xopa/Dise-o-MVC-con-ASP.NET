@model Prueba_9D_MVC.Models.producto
@{
    ViewBag.Title = "AgregarProducto";
}
<div class="center">
    <h4>Nuveo producto</h4>
</div>
<br /><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="">
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "invalid" })
            <div class="input-field col s6">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "white-text" } })
                @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "validate" })
            </div>

            <div class="input-field col s6">
                @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "white-text" } })
                @Html.LabelFor(model => model.precio, htmlAttributes: new { @class = "validate" })
            </div>

            <div class="input-field col s6">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "white-text" } })
                @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "validate" })
            </div>

            <div class="input-field col s6">
                @Html.EditorFor(model => model.existencia, new { htmlAttributes = new { @class = "white-text" } })
                @Html.LabelFor(model => model.existencia, htmlAttributes: new { @class = "validate" })
            </div>
            <div class="form-group">
                <div class="col s12">
                    <input type="submit" value="Crear" class="btn" />
                </div>
            </div>
        </div>
    </div>
}
<br /><br />
<div>
    @Html.ActionLink("Regresar al inicio", "Index")
</div>
